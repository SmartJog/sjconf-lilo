#!/bin/sh
set -e

#DEBHELPER#

PLUGINS="lilo"

for plugin in $PLUGINS
do
	if ! sjconf --list-plugins | grep "^Plugin $plugin$" > /dev/null
	then
		sjconf --install-conf --link /etc/sjconf-lilo/confs/$plugin.conf
		sjconf --install-plugin --link /usr/lib/sjconf-lilo/plugins/$plugin.py
		sjconf --enable-plugin $plugin
	fi
done
