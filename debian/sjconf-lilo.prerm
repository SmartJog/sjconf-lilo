#!/bin/sh
set -e

#DEBHELPER#

PLUGINS="lilo"

if [ "$1" = 'remove' ]
then
	for plugin in $PLUGINS
	do
		sjconf --disable-plugin $plugin || true
		sjconf --uninstall-plugin $plugin || true
		if [ -e /etc/sjconf-lilo/templates/$plugin ]
			 sjconf --uninstall-template $plugin || true
		fi
		sjconf --uninstall-conf $plugin || true
	done
fi
